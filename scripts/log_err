#!/usr/bin/env bash
set -euo pipefail
# Minimal error logger used by cron/automation tasks.
# Usage: scripts/log_err "message" (or pipe into it)

ts="$(date -Iseconds)"
msg="${1:-}"
if [[ -z "$msg" ]]; then
  msg="$(cat)"
fi

mkdir -p /tmp/openclaw
printf "[%s] %s\n" "$ts" "$msg" >> /tmp/openclaw/automation-errors.log
